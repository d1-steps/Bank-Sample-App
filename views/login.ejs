<%- include('partials/header') %>
	<div class="jumbotron jumbotron-fluid">
	  <div class="container">
	    <form class="form-horizontal" role="form" method="POST" action="/login">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6" style="text-align:center;">
                    <h2 style="color:white";"align:center;">Welcome to Internet Banking</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="sr-only" for="email" style="color:white">E-Mail Address: </label>
                                <input style="align:center" id="id_username" maxlength="40" name="email" type="text" size="36"
                                   placeholder="you@example.com" required autofocus>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="sr-only" for="password" style="color:white;padding-top: .22em;padding-right: 2.3em;">Password:</label>
                            <input type="password" name="password" class="form-control" id="password" maxlength="40" type="text" size="36"
                                   placeholder="Password" required>
                </div>
                <div class="col-md-3">
                    <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                        <!-- Put password error message here -->    
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6" style="padding-top: .35rem">
                    <div class="form-check mb-2 mr-sm-2 mb-sm-0">
                        <label class="form-check-label">
                            <input class="form-check-input" name="remember"
                                   type="checkbox" >
                            <span style="padding-bottom: .5rem;color: whitesmoke;padding-top: .20rem;">Remember me</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-top: 1rem">
                <div class="col-md-3"></div>
                <div class="col-md-6">

                    <button role="button" type="submit" class="btn btn--primary" id="next_button"style="width: 200px;">Login</button>
                    <button role="button" type="submit" class="btn btn--primary" id="register" href="/register" style="width: 200px;">Register</button>
                </div>
            </div>
        </form>
	  </div>
	</div>
<%- include('partials/footer') %>
